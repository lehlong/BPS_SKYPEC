@model SMO.Service.MD.ProjectService
@{
    Model.ViewId = Guid.NewGuid().ToString();
    Model.FormId = Guid.NewGuid().ToString();
}

<div id='@Model.ViewId' class="container-fluid child-content">
    @using (Ajax.BeginForm("Update", null, FormDataUtils.GetAjaxOptions(Model.ViewId), new { @id = Model.FormId }))
    {
        @Html.AntiForgeryToken();
        @Html.HiddenFor(m => m.ObjDetail.CODE)
        <div class="card border-grey">
            <div class="body" style="padding-top: 0px;">
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active">
                        <a style="padding-left:0px"><i class="material-icons col-fecon">clear_all</i> CHỈNH SỬA DỰ ÁN ĐẦU TƯ</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="page-function">
                        <div class="page-function-button m-r-20">
                            @Html.MyButton("cmdBack", "Quay lại", string.Format("Forms.Close('{0}');", @Model.ViewId), "Alt+N", "arrow_back")
                            @Html.MyButton("cmdSave", "Lưu lại", string.Format("Forms.SubmitForm('{0}');", @Model.FormId), "Alt+N", "done_all")
                        </div>
                    </div>

                    <div class="row m-t-20">
                        <div class="col-xs-1"></div>
                        <div class="col-lg-7 col-xs-10">
                            <label>Mã</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.CODE, new { @disabled = "" })
                                </div>
                            </div>

                            <label>Tên</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.NAME)
                                </div>
                            </div>

                            <label>Loại hình</label>
                            <div class="form-group">
                                @Html.MyDropDownListFor(m => m.ObjDetail.LOAI_HINH, SelectListUtilities.SelectLoaiHinhDauTu(false), new { @class = "selectpicker show-tick", @data_val = false })
                            </div>

                            <label>Giai đoạn</label>
                            <div class="form-group">
                                @Html.MyDropDownListFor(m => m.ObjDetail.GIAI_DOAN, SelectListUtilities.SelectGiaiDoanDauTu(false), new { @class = "selectpicker show-tick", @data_val = false })
                            </div>

                            <label>Năm bắt đầu</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.YEAR)
                                </div>
                            </div>

                            <label>Ngành nghề</label>
                            <div class="form-group">
                                @Html.MyDropDownListFor(m => m.ObjDetail.NGANH_NGHE, SelectListUtilities.SelectNganhNgheDauTu(), new { @class = "selectpicker show-tick", @data_val = false })
                            </div>

                            <label>Phân loại</label>
                            <div class="form-group">
                                @Html.MyDropDownListFor(m => m.ObjDetail.PHAN_LOAI, SelectListUtilities.SelectPhanLoaiDauTu(), new { @class = "selectpicker show-tick", @data_val = false })
                            </div>

                            <label>Khu vực</label>
                            <div class="form-group">
                                @Html.MyDropDownListFor(m => m.ObjDetail.AREA_CODE, SelectListUtilities.GetAllArea(), new { @class = "selectpicker show-tick", @data_val = false })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    }
    <script type="text/javascript">
        $(function () {
            Forms.CompleteUI();
        });
    </script>
</div>

