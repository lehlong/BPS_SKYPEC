
@model SMO.Service.MD.ElementService
@{
    Model.ViewId = Guid.NewGuid().ToString();
    Model.FormId = Guid.NewGuid().ToString();
}

<div id='@Model.ViewId' class="container-fluid child-content">
    @using (Ajax.BeginForm("Update", null, FormDataUtils.GetAjaxOptions(Model.ViewId), new { @id = Model.FormId }))
    {
        @Html.AntiForgeryToken();
        @Html.HiddenFor(m => m.ObjDetail.CODE)
        <div class="card border-grey">
            <div class="body" style="padding-top: 0px;">
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active">
                        <a style="padding-left:0px"><i class="material-icons col-fecon">clear_all</i> CHỈNH SỬA ELEMENT</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="page-function">
                        <div class="page-function-button m-r-20">
                            @Html.MyButton("cmdBack", "Quay lại", string.Format("Forms.Close('{0}');", @Model.ViewId), "Alt+N", "arrow_back")
                            @Html.MyButton("cmdSave", "Lưu lại", string.Format("Forms.SubmitForm('{0}');", @Model.FormId), "Alt+N", "done_all")
                        </div>
                    </div>

                    <div class="row m-t-20">
                        <div class="col-xs-1"></div>
                        <div class="col-lg-7 col-xs-10">
                            <label>Mã</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.CODE, new { @disabled = "" })
                                </div>
                            </div>

                            <label>Tên</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.NAME)
                                </div>
                            </div>

                            <label>Loại element</label>
                            <div class="form-group">
                                @Html.MyDropDownListFor(m => m.ObjDetail.ELEMENT_TYPE, SelectListUtilities.SelectElementType(), new { @class = "selectpicker show-tick", @data_val = false })
                            </div>

                            <label>Độ ưu tiên</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.PRIORITY)
                                </div>
                            </div>

                            <label>Trạng thái</label>
                            <div class="form-group">
                                @Html.MyDropDownListFor(m => m.ObjDetail.STATUS, SelectListUtilities.SelectElementStatus(), new { @class = "selectpicker show-tick", @data_val = false })
                            </div>

                            <label>Công thức</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.FORMULA)
                                </div>
                            </div>

                            <label>Đơn vị tính</label>
                            <div class="form-group">
                                @Html.MyDropDownListFor(m => m.ObjDetail.UNIT_CODE, SelectListUtilities.GetAllUnit(), new { @class = "selectpicker show-tick", @data_val = false })
                            </div>

                            <label>SQL Query</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.QUERY)
                                </div>
                            </div>

                            <label>Giá trị</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.VALUE)
                                </div>
                            </div>

                            <label>Màn hình</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.SCREEN)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <script type="text/javascript">
        $(function () {
            Forms.CompleteUI();
        });
    </script>
</div>


