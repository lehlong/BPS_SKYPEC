@model SMO.Service.MD.UnitPriceService
@{
    Model.ViewId = Guid.NewGuid().ToString();
    Model.FormId = Guid.NewGuid().ToString();
}
<div id='@Model.ViewId' class="container-fluid child-content">
    @using (Ajax.BeginForm("Create", null, FormDataUtils.GetAjaxOptions(Model.ViewId), new { @id = Model.FormId }))
    {
        @Html.AntiForgeryToken()
        <div class="card border-grey">
            <div class="body" style="padding-top: 0px;">
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active">
                        <a style="padding-left:0px"><i class="material-icons col-fecon">clear_all</i> TẠO MỚI ĐƠN GIÁ</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="page-function">
                        <div class="page-function-button m-r-20">
                            @Html.MyButton("cmdBack", "Quay lại", string.Format("Forms.Close('{0}');", @Model.ViewId), "Alt+N", "arrow_back")
                            @Html.MyButton("cmdSave", "Lưu lại", string.Format("Forms.SubmitForm('{0}');", @Model.FormId), "Alt+N", "done_all")
                        </div>
                    </div>

                    <div class="row m-t-20">
                        <div class="col-xs-1"></div>
                        <div class="col-lg-7 col-xs-10">
                            <label>Sân bay</label>
                            <div class="form-group">
                                @Html.MyDropDownListFor(m => m.ObjDetail.SAN_BAY_CODE, SelectListUtilities.GetAllSanBay(), new { @class = "selectpicker show-tick", @data_val = false })
                            </div>

                            <label>VN</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.VN, new { @type = "number" })
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.VN)
                            </div>

                            <label>0V</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.OV, new { @type = "number" })
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.OV)
                            </div>

                            <label>BL</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.BL, new { @type = "number" })
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.BL)
                            </div>

                            <label>VJ</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.VJ, new { @type = "number" })
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.VJ)
                            </div>

                            <label>QH</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.QH, new { @type = "number" })
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.QH)
                            </div>

                            <label>VU</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.VU, new { @type = "number" })
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.VU)
                            </div>

                            <label>KHTN#</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.OTHER_HKTN, new { @type = "number" })
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.OTHER_HKTN)
                            </div>

                            <label>HKNN</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.HKNN, new { @type = "number" })
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.HKNN)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <script type="text/javascript">
        $(function () {
            Forms.CompleteUI();
        });
    </script>
</div>
