
@using System.Text;
@using Newtonsoft.Json;
@using Newtonsoft.Json.Serialization;
@{
    var gridId = Guid.NewGuid().ToString("N");
    var jsonSerializeSettings = new JsonSerializerSettings { ContractResolver = new CamelCasePropertyNamesContractResolver() };
}
<style>
    .row-bold .dhx_grid-cell, .row-bold .dhx_tree-cell {
        font-weight: bold
    }

    .grid .dhx_grid-cell {
        word-break: break-word
    }

    .dhx_header-wrapper {
        z-index: 1;
    }
</style>

<div style="height: calc(100vh - 240px); width: 100%" id="@gridId"></div>

<script type="text/javascript">
    var rawData = [];
    let columns = [
        { id: "stt", header: [{ text: "STT", align: "center" }], minWidth: 100 },
        { id: "name", header: [{ text: "CHỈ TIÊU", align: "center" }, { content: "inputFilter" }], minWidth: 300 },

        { id: "col1", header: [{ text: "GIÁ TRỊ ĐẦU TƯ THỜI ĐIỂM ĐẦU NĂM", align: "center", rowspan: 2 }], align: "right", minWidth: 180 },

        { id: "col2", header: [{ text: "PHÁT SINH", align: "center", colspan: 4 }, { text: "KH", align: "center" }], align: "right", minWidth: 180 },
        { id: "col3", header: ["", { text: "9T ĐN", align: "center" }], align: "right", minWidth: 180 },
        { id: "col4", header: ["", { text: "TH", align: "center" }], align: "right", minWidth: 180 },
        { id: "col5", header: ["", { text: "%TH/KH", align: "center" }], align: "right", minWidth: 180 },

        { id: "col6", header: [{ text: "GIÁ TRỊ ĐẦU TƯ THỜI ĐIỂM CUỐI NĂM", align: "center", rowspan: 2 }], align: "right", minWidth: 180 },
        { id: "col7", header: [{ text: "TỶ LỆ VỐN GÓP (%) ĐẾN CUỐI NĂM", align: "center", rowspan: 2 }], align: "right", minWidth: 180 },
        { id: "col8", header: [{ text: "CỔ TỨC HOẶC LỢI NHUẬN ĐƯỢC CHIA", align: "center", rowspan: 2 }], align: "right", minWidth: 180 },
        { id: "col9", header: [{ text: "TY LỆ LN ĐƯỢC CHIA TRÊN VỐN ĐẦU TƯ BÌNH QUÂN", align: "center", rowspan: 2 }], align: "right", minWidth: 180 },
        { id: "col10", header: [{ text: "GIÁ TRỊ ĐÃ TRÍCH LẬP DỰ PHÒNG GIẢM GIÁ ĐT", align: "center", rowspan: 2 }], align: "right", minWidth: 180 },
       
    ];

    const treeGrid = new dhx.Grid("@gridId", {
        columns,
        data: rawData,
        leftSplit: 2,
        resizable: true,
        keyNavigation: true,
        rowCss: function ({ isBold }) { return isBold == true ? "row-bold" : "" },
        selection: true,
        autoHeight: true,
    });


</script>

