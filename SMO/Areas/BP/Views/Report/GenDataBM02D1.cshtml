
@using System.Text;
@using Newtonsoft.Json;
@using Newtonsoft.Json.Serialization;
@{
    var gridId = Guid.NewGuid().ToString("N");
    var jsonSerializeSettings = new JsonSerializerSettings { ContractResolver = new CamelCasePropertyNamesContractResolver() };
}
<style>
    .row-bold .dhx_grid-cell, .row-bold .dhx_tree-cell {
        font-weight: bold
    }

    .grid .dhx_grid-cell {
        word-break: break-word
    }

    .dhx_header-wrapper {
        z-index: 1;
    }
</style>

<div style="height: calc(100vh - 240px); width: 100%" id="@gridId"></div>

<script type="text/javascript">
    var rawData = [];
    let columns = [
        { id: "stt", header: [{ text: "STT", align: "center" }], minWidth: 100 },
        { id: "name", header: [{ text: "NỘI DUNG", align: "center" }, { content: "inputFilter" }], minWidth: 300 },

        { id: "unit", header: [{ text: "ĐVT", align: "center" }], align: "right", minWidth: 180 },
        { id: "col1", header: [{ text: "KH (KỊCH BẢN CAO)", align: "center" }], align: "right", minWidth: 300 },
        { id: "col2", header: [{ text: "KH (KỊCH BẢN TRUNG BÌNH)", align: "center" }], align: "right", minWidth: 300 },
        { id: "col3", header: [{ text: "KH (KỊCH BẢN THẤP)", align: "center" }], align: "right", minWidth: 300 },
    ];

    const treeGrid = new dhx.Grid("@gridId", {
        columns,
        data: rawData,
        leftSplit: 2,
        resizable: true,
        keyNavigation: true,
        rowCss: function ({ isBold }) { return isBold == true ? "row-bold" : "" },
        selection: true,
        autoHeight: true,
    });


</script>

