                                    if (sumElement != null)
                                    {
                                        <tr class="strong">
                                            <td class="sticky-cell pre-whitespace"></td>
                                            <td level="0" class="sticky-cell"></td>
                                            <td class="sticky-cell pre-whitespace strong">@(sumElement.NAME)</td>
                                            <td class="align-right pre-whitespace">@sumElement.Values[0].ToStringVN()</td>
