@model IList<T_MD_KHOAN_MUC_DAU_TU>
@using SMO.Core.Entities.MD;
@using System.Text;

@{
    var viewId = Guid.NewGuid().ToString();
}
<div id="@viewId" class="container-fluid child-content">
    <div class="card">
        <div class="body" style="padding-top: 0px">

            @if (Model == null || Model.Count == 0)
            {
                <div class="p-t-10">
                    @Html.MyButton("cmdBack", "Quay lại", $"Forms.Close('{viewId}');", "Alt+N", "arrow_back")
                </div>
                <div class="p-t-10">
                    @{
                        Html.RenderPartial("_NothingData");
                    }
                </div>
            }
            else
            {
                <div class="p-t-10">
                    @Html.MyButton("cmdBack", "Quay lại", $"Forms.Close('{viewId}');", "Alt+N", "arrow_back")
                    @Html.MyButton("cmdDownloadTemlate",
                                                "Download mẫu",
                                                "DownloadTemplate();",
                                                "Alt+V", "file_download")
                </div>
                <div class="p-t-10">
                    <div class="body-content">
                        <div class="table-responsive" style="max-height: calc(100vh - 140px)">
                            <table class="table table-condensed table-bordered table-striped table-pre-whitespace">
                                <thead>
                                    <tr class="sticky-row">
                                        <th rowspan="2">Mã</th>
                                        <th rowspan="2">Tên dự án</th>
                                        <th colspan="3" style="text-align:center;">Thông tin về danh mục đầu tư</th>
                                        <th colspan="3" style="text-align:center;">Giá trị KL công việc hoàn thành</th>
                                        <th colspan="2" style="text-align:center;">Giá trị giải ngân</th>
                                        <th rowspan="2">Ghi chú</th>
                                    </tr>
                                    <tr class="sticky-row">
                                        <th>Tổng mức đầu tư</th>
                                        <th>Nguồn VCSH</th>
                                        <th>Tiến độ thực hiện</th>
                                        <th>Luỹ kế đến đầu kỳ lập KH</th>
                                        <th>KH năm</th>
                                        <th>Tiến độ triển khai thực hiện năm KH</th>
                                        <th>Luỹ kế đến đầu kỳ lập KH</th>
                                        <th>KH năm</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var detail in Model)
                                    {
                                        var space = new StringBuilder();
                                        for(int i = 0; i < detail.LEVEL; i++)
                                        {
                                            space.Append("\t");
                                        }
                                        <tr>
                                            <td>@detail.PROJECT_CODE.ToString()</td>
                                            <td>@($"{space.ToString()}{detail.PROJECT_NAME}")</td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
